<!DOCTYPE html>
<html lang="en">
<head>
  <script src="https://kit.fontawesome.com/2ca6785a00.js" crossorigin="anonymous"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/articles-all.css" rel="stylesheet" />
  <title>Home - AwesomeSource</title>
</head>
<body class="body-home">
  <div class="container account-container">
    <div class="left">
      <div class="top">
        <div class="sidenav">
          <div class="user-box">
            <img src="<%= pic %>" class="user-picture" />
          </div>
          <div class="info">
            <h1 class="info-username"><%= name %></h1>
            <h1 class="info-email"><%= email %></h1>
          </div>
          <div class="buttons">
            <div class="mid">
              <div class="new dashboard-pad">
                <a href="/new" class="new-article dashboard-button" id="new"><i class="fas fa-pen pad-i"></i>New Post</a>
              </div>
              <div class="home-box dashboard-pad">
                <a href="/" class="home-button dashboard-button" id="home"><i class="fas fa-home pad-i"></i>Home</a>
              </div>
            </div>
            <div class="bottom dashboard-pad">
              <a href="/logout" class="logout dashboard-button"><i class="fas fa-sign-out-alt pad-i"></i>Logout</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="main-content shift">
    <h1 class="discover">Discover</h1>
    <div class="searchbar">
      <div class="search-box">
        <i class="fas fa-search search-icon"></i>
        <input class="search" type="text" onkeyup="search()" id="search-articles" placeholder="Search">
      </div>
    </div>
    <ul id="articles">
      <% articles.forEach(article => { %>
        <li class="card-list">
          <div class="article-card">
            <div class="card-body">
              <h4 class="card-title card-color" id="article-title"><%= article.title %></h4>
              <p class="card-date card-color"><%= article.createdAt.toLocaleDateString() %> - Written by <%= article.username %></p>
              <p class="card-description card-color"><%= article.description %></p> 
            </div>
            <div class="readmore-div">
              <a href="/<%= article.slug %>" class="bluegrad button noselect read">Read More</a>
            </div>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
<script src="/search.js"></script>
</html>
